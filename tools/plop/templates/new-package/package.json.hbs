{
  "name": "@vrkit-platform/{{name}}",
  "version": "{{version}}",
  "main": "./index.js",
  "module": "./index.js",
  "types": "./index.d.ts",
  "dependencies": {
    "@vrkit-platform/lib-decorators": "{{version}}",
    "vrkit-shared/utils": "{{version}}",
    "@vrkit-platform/lib-models": "{{version}}"
  },
  "devDependencies": {
    "@vrkit-platform/tool-builder": "{{version}}",
    "@vrkit-platform/tool-testing": "{{version}}"
  },
  "publishConfig": {
    "access": "restricted",
    "directory": "lib"
  },
  "scripts": {
    "postbootstrap": "yarn run init",
    "clean": "rm -Rf lib && yarn run init",
    "clean:output": "test -e lib/node_modules && rm -Rf lib/node_modules; true",
    "compile": "yarn run init && tsc -p tsconfig.json",
    "prepack": "run-s clean:output init compile",
    "init": "zx ../../../scripts/package-init.mjs"
  }
}
