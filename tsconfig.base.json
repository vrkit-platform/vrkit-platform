{
  //  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "strictNullChecks": false,
    "composite": true,
    "incremental": true,
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": false,
    "allowUnusedLabels": true,
    "noUnusedParameters": false,
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext",
      "Decorators",
      "WebWorker"
    ],
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "diagnostics": false,
    //    "useDefineForClassFields": true,
    "noImplicitAny": false,
    "outDir": "lib",
    "inlineSourceMap": true,
    "preserveConstEnums": true,
    "types": ["swc-plugin-jsx-control-statements",  "jest",  "webpack-env"],
    "paths": {
      "@vrkit-platform/models":
      [  "./packages/js/vrkit-models"],
      "@vrkit-platform/models/*":
      [  "./packages/js/vrkit-models/src/*"],
      "vrkit-models":
      [  "./packages/js/vrkit-models"],
      "vrkit-models/*":
      [  "./packages/js/vrkit-models/src/*"],
      "vrkit-native-interop":
      [  "./packages/js/vrkit-native-interop"],
      "vrkit-native-interop/*":
      [  "./packages/js/vrkit-native-interop/src/web/*"],
      "@vrkit-platform/plugin-sdk":
      [  "./packages/js/vrkit-plugin-sdk"],
      "@vrkit-platform/plugin-sdk/*":
      [  "./packages/js/vrkit-plugin-sdk/src/*"],
      "vrkit-plugin-internal":
      [  "./packages/js/vrkit-plugin-internal"],
      "vrkit-plugin-internal/*":
      [  "./packages/js/vrkit-plugin-internal/src/*"],
      "@vrkit-platform/shared":
      [  "./packages/js/vrkit-shared"],
      
      "@vrkit-platform/shared/*":
      [  "./packages/js/vrkit-shared/src/*"],
      "@vrkit-platform/shared-ui":
      [  "./packages/js/vrkit-shared-ui"],
      "@vrkit-platform/shared-ui/styles":
      [  "./packages/js/vrkit-shared-ui/src/styles"],
      "@vrkit-platform/shared-ui/*":
      [  "./packages/js/vrkit-shared-ui/src/*"]
    }
  }
}