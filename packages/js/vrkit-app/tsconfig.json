{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "moduleResolution": "Bundler",
    "paths": {
      "vrkit-app-main":
      [  "./src/main"],
      "vrkit-app-main/*":
      [  "./src/main/*"],
      "vrkit-app-renderer":
      [  "./src/renderer"],
      "vrkit-app-renderer/*":
      [  "./src/renderer/*"],
      "vrkit-app-common":
      [  "./src/common"],
      "vrkit-app-common/*":
      [  "./src/common/*"]
    }
  },
  "include": ["src/**/*.ts","src/**/*.tsx","src/**/*.json","src/**/*"],
//  "exclude": ["**/*.spec.ts"]
}